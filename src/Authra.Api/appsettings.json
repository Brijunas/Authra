{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Jwt": {
    "Issuer": "https://authra.io",
    "Audience": "authra-api",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenSlidingDays": 30,
    "RefreshTokenAbsoluteDays": 90,
    "SigningKeyLifetimeDays": 90
  },
  "Smtp": {
    "Host": "localhost",
    "Port": 1025,
    "Username": null,
    "Password": null,
    "UseSsl": false,
    "UseStartTls": false,
    "FromAddress": "noreply@authra.io",
    "FromName": "Authra"
  },
  "PasswordHashing": {
    "MemoryCost": 47104,
    "TimeCost": 1,
    "Parallelism": 1
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000" ]
  }
}
